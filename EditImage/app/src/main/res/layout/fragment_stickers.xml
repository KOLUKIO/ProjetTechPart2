<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:background="@color/colorTransparentGrey">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_star_24dp"
            android:text="star"
            android:textSize="10dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/button_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_heart_24dp"
            android:text="heart"
            android:textSize="10dp"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/button_sun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/ic_sun_24dp"
            android:text="sun"
            android:textSize="10dp"
            android:textColor="@android:color/white"/>

    </LinearLayout>

</HorizontalScrollView>